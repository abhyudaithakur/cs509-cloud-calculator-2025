{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ],
        "outDir": "dist"
    },
    "include": [
        "./bin/**/*.ts",
        "./lib/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "cdk.out"
    ]
}